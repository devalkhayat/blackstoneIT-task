<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="page_title">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <!-- -->
    <style name="lblDegree">
        <item name="android:textSize">@dimen/font_size_48</item>
        <item name="android:textColor">@color/app_yellow</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="lblCity">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="lblDescription">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="lblPlaceName">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <!-- -->

    <!-- -->
    <style name="item_title_white">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="item_title_black">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <!-- -->

    <!-- -->
    <style name="customCardview" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!-- -->

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/app_yellow</item>
    </style>
</resources>